<Grid x:Class="InsaworldIHM.InGameMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InsaworldIHM"
        mc:Ignorable="d"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid>
        <Button x:Name="save" Content="Save" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" />
        <Button x:Name="load" Content="Load" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"/>
        <Button x:Name="saveReplay" Content="Save for replay" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" />
        <Button x:Name="quit" Content="Quit" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"/>
        <Button x:Name="back" Content="Back to game" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" />

    </Grid>
</Grid>
